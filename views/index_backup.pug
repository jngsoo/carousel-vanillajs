doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/css/index.css')
  body
    .card-container
      each data in cardData
        .card(style=`background-color: ${data['category-color']};`)
          img(src=`${data['img']}`)
          h3 #{data['title']}
          span
            -for(let i=0; i<data['slides']; i++)
              .dot
    .slide-container
      a.prev &#10094;
      .slide
        ul.carousel-container
          each carousel in carouselData
            li
              img.carousel-image(src=`${carousel['img']}`)
              .article-container
                article.carousel-article(aria-hidden="true")
                  span(style=`${carousel['category-color']}`)
                  h1 #{carousel['title']}
                  p #{carousel['content']}
                  a.anchor(href=`${carousel['detail_href']}`) #{carousel['detail_comment']}
      a.next &#10095;
    script
      include ../public/javascripts/index.mjs 
            




      